extends /_layouts/double

append vars
  -
    var data = htmlWebpackPlugin.options.data
    var json = htmlWebpackPlugin.options.json
    var pageInfo = {
      path: htmlWebpackPlugin.options.data.key,
      title: htmlWebpackPlugin.options.data.title,
      description: htmlWebpackPlugin.options.data.description
    }

block main
  article
    .container
      h1
        | #{pageInfo.title}
      p.lead
        | #{pageInfo.description}
    section.container
      h2
        span 公式サイト・github
      p
        a(href!=`#{data.officialsite}`) #{data.officialsite}
      p
        | 純粋な使い方は公式ページが詳しいのでそちらをご覧ください。ここでは、このパッケージで注意点などを書いていきます。
    section.container
      h2
        span static-packでの特徴・使い方など
      .useage
        | !{data.usage}

block sub
  aside.container
    ul.list-group
      li.list-group-item
        a.nav-link(href='/') トップページ
      li.list-group-item
        a.nav-link(href='/samples') サンプルページ
        ul.list-group.list-group-flush
          li.list-group-item
            a.nav-link(href='/samples/svg-sprite.html') svg-sprite
          li.list-group-item
            a.nav-link(href='/samples/pug.html') pug
          li.list-group-item
            a.nav-link(href='/samples/stylus.html') stylus
