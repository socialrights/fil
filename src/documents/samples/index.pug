extends /_layouts/double

append vars
  -
    var pageInfo = {
      path: '/samples',
      title: 'サンプルページ',
      description: 'static-packで使用しているツールを一部紹介します。'
    }

block main
  article
    .container
      h1
        span サンプルページ
      p.lead.mb-5
        | #{pageInfo.description}
    .container
      .row
        .col-4.text-center
          a(href='/samples/svg-sprite.html')
            svg.mb-3
              use(xlink:href='#SVG_logo')
            span svg-sprite
        .col-4.text-center
          a(href='/samples/pug.html')
            svg.mb-3
              use(xlink:href='#pug')
            span pug
        .col-4.text-center
          a(href='/samples/stylus.html')
            svg.mb-3
              use(xlink:href='#stylus')
            span stylus


block sub
  aside.container
    ul.list-group
      li.list-group-item
        a.nav-link(href='/') トップページ
      li.list-group-item
        a.nav-link(href='/samples') サンプルページ
        ul.list-group.list-group-flush
          li.list-group-item
            a.nav-link(href='/samples/svg-sprite.html') svg-sprite
          li.list-group-item
            a.nav-link(href='/samples/pug.html') pug
          li.list-group-item
            a.nav-link(href='/samples/stylus.html') stylus
